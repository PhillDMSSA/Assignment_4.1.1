<Window x:Class="Assignment_4._1._1.AddPersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_4._1._1"
        mc:Ignorable="d"
        Title="Add Person" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label Content="First Name"/>
        <TextBox x:Name="FirstNameBox" Margin="0,0,0,10"/>
        <Label Content="Last Name"/>
        <TextBox x:Name="LastNameBox" Margin="0,0,0,10"/>
        <Label Content="Mobile Phone"/>
        <TextBox x:Name="MobilePhoneBox" Margin="0,0,0,10"/>
        <Label Content="Work Phone"/>
        <TextBox x:Name="WorkPhoneBox" Margin="0,0,0,10"/>
        <Label Content="Address"/>
        <TextBox x:Name="AddressBox" Margin="0,0,0,10"/>
        <Button Content="Save" Click="SaveButton_Click" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
